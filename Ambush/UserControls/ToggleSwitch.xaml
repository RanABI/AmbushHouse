<UserControl x:Class="Ambush.UserControls.ToggleSwitch"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Ambush.UserControls"
             mc:Ignorable="d" Height="316" Width="662">
  
        <Viewbox>
        <Grid HorizontalAlignment="Left" Height="51" Margin="0" VerticalAlignment="Top" Width="110" MouseLeftButtonDown="Grid_MouseLeftButtonDown">
            <Rectangle x:Name="DotBackGround" HorizontalAlignment="Left" Height="51" VerticalAlignment="Top" Width="110" RadiusY="26.833" RadiusX="26.833" Fill="#FFA0A0A0"/>
            <Ellipse x:Name="Dot" HorizontalAlignment="Center" Height="51" VerticalAlignment="Center" Width="50" Fill="White" RenderTransformOrigin="0.493,0.5" MouseLeftButtonDown="Dot_MouseLeftButtonDown"/>
        </Grid>
        </Viewbox>
</UserControl>
